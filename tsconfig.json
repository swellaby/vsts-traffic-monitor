{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "es2015.promise",
            "es6",
            "es2016.array.include"
        ],
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "importHelpers": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules/",
        ".coverage/",
        ".nyc_output/",
        ".testresults/",
        ".vscode/"
    ]
}

